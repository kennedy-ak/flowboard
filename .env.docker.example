# FlowBoard Docker Environment Variables
# Copy this file to .env.docker and update the values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Site URL (update with your domain)
SITE_URL=http://localhost:8009

# Database (PostgreSQL is configured in docker-compose.yml)
# No need to change these unless you modify docker-compose.yml

# Email Settings (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@flowboard.com

# SMS Settings (Mnotify API)
MNOTIFY_API_KEY=your-mnotify-api-key
MNOTIFY_SENDER=FlowBoard

# CSRF Settings (add your domain)
CSRF_TRUSTED_ORIGINS=http://localhost:8009,https://yourdomain.com
